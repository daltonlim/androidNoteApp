<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".NoteEditor" android:orientation="vertical">

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/titleBox" android:hint="Title"/>
        <TextView
                android:text="Last edited on 15 Jan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView_lastEdit" android:paddingLeft="10dp"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                        android:text="Delete"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/button_delete" android:layout_weight="1"/>
                <Button
                        android:text="Save"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/button_save" android:layout_weight="1"/>
        </LinearLayout>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/contentBox" android:gravity="top" android:hint="Start note here..."
        />
</LinearLayout>